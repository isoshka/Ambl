<div class="container">
  <div class="flex-parent jc-center mb-6">
    <h1><i class="fa-2x fa-solid fa-bookmark"></i> Select your interest</h1></div>
      <div>
        <%= "_" *35 %>
      </div>

      <%= simple_form_for @bookmark do |f| %>
        <%= f.association :interest, prompt: "Select an interest", label:'Choose from the list below:',   priority: ['cafe', 'cocktail-bar', 'nightclub', 'ramen', 'bookshop', 'flower shop', 'music shop'] %>
        <%= f.button :submit, "Save", class: "ambl-button" %>
      <% end %>
</div>

<div class="container">
  <h2>Or tap on the icons below</h2>
    <div>
      <body.new><%= "." *1 %></body.new>
    </div>
      <div class="flex-parent jc-center">
        <i class="fa-2x fa-solid fa-mug-saucer">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</i>
        <i class="fa-2x fa-solid fa-martini-glass-citrus">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</i>
        <i class="fa-2x fa-solid fa-bowl-food">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</i>
        <i class="fa-2x fa-solid fa-champagne-glasses">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</i>
      </div>
        <div>
          <body.new><%= "." *1 %></body.new>
        </div>
      <div class="container">
        <i class="fa-2x fa-solid fa-guitar">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</i>
        <i class="fa-2x fa-solid fa-arrows-down-to-people">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</i>
        <i class="fa-2x fa-solid fa-book">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</i>
        <i class="fa-2x fa-solid fa-landmark">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</i>
      </div>
        <div>
          <body.new><%= "." *1 %></body.new>
        </div>
</div>

<div class="container">
  <div class="flex-parent jc-center mb-6">
    <%= simple_form_for @bookmark do |f| %>
      <%= f.association :interest,
                      as: :check_boxes,
                      input_html: { class: "tag-selector" },
                      item_wrapper_class: 'tag-item' %>
      <% if :interest == "ramen" %>
        <i class="fa-2x fa-solid fa-bowl-food"></i>
      <% elsif :interest == "cafe" %>
        <i class="fa-2x fa-solid fa-mug-saucer"></i>
      <% elsif :interest == "cocktail-bar" %>
        <i class="fa-2x fa-solid fa-martini-glass-citrus"></i>
      <% elsif :interest == "nightclub" %>
        <i class="fa-2x fa-solid fa-champagne-glasses"></i>
      <% end %>
    <% end %>
  </div>
</div>
