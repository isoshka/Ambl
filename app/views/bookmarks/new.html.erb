<div class="container testing py-5 text-center">
  <div class="flex-parent jc-center mb-6 testing">
    <h1><i class="fa-1x fa-solid fa-bookmark"></i> Select your interest</h1></div>
      <div>
        <%= "_" *35 %>
      </div>
</div>

<div class="container py-5">
  <div class="flex-parent jc-center mb-6">
    <div class="container">
      <%= simple_form_for @bookmark, html: {class:"text-center"} do |f| %>
              <%= f.input :interest,
                          as: :check_boxes,
                          item_wrapper_class: "tag-item",
                          collection: Interest.all.pluck(:name),
                          label: "Popular Interests",
                          input_html: { class: "tag-selector" } %>
          <%= f.input :interest,
                            as: :check_boxes,
                            item_wrapper_class: "tag-item",
                            label: "Others",
                            collection: ["Interior", "Museums", "Restaurants", "Fast Food", "Billiards", "Tennis", "Pool", "Game Center"],
                            input_html: { class: "tag-selector" } %>
              <%= f.button :submit, "Save", class: "btn btn-light btn-pill rounded-pill btn-lg mt-5" %>
      <% end %>
    </div>
  </div>
</div>
