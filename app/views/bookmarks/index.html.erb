<div class="container">
  <div class="flex-parent jc-center mb-6">
    <div class="container everything-centered">
      <div class="flex-parent jc-center mb-6 bottom-spacing ">
        <h1><i class="fa-1x fa-solid fa-bookmark"></i> Your Interests</h1>
      </div>

      <div>
        <div class="col-md-4 mb-4">
          <% @my_bookmarks.each_with_index do |bookmark, index| %>
            <div class="card" style="padding: 10px; border-radius: 10px">
              <div class="card-header text-center">
                <%= content_tag :p, bookmark.interest.name.capitalize, style: 'color: black; font-size: 24px;' %>
                <i class="fa-solid fa-trash-can" style="color: black;"></i><%= link_to "", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
              </div>
            </div>
            <br>
          <% end %>
        </div>
      </div>

      <div class="justify-content: space-between">
        <% if @my_bookmarks.count < 3 %>
        <%= link_to "Add", bookmarks_new_path, class:"btn btn-light btn-pill rounded-pill" %>
        <% end %>
        <%= link_to "Done", root_path, class:"btn btn-light btn-pill rounded-pill" %>
      </div>
    </div>
  </div>
</div>
