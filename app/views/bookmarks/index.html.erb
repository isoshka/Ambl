<div class="container">
  <div class="flex-parent jc-center mb-6">
    <div class="container everything-centered">
      <div class="flex-parent jc-center mb-6 bottom-spacing ">
        <h1><i class="fa-1x fa-solid fa-bookmark"></i> Your Interests</h1>
      </div>

      <div>
        <% @my_bookmarks.each_with_index do |bookmark, index| %>
        <div class="bookmark-card-header">
          <div class="bookmark-card-body">
            <%# <i class#="fa-solid <%=Interest::INTERESTS[bookmark.interest.name.to_sym] %>
          </div>
            <h2 class="bookmark-inner"> <strong><%= bookmark.interest.name.capitalize %> </strong></h2><br>
            <%= link_to(bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}) do %>
            <i class="fa-solid fa-trash-can"></i>
            <% end %>
        </div>
        <br>
        <% end %>
      </div>

      <br>
      <br>

      <% if @my_bookmarks.count < 3 %>
      <i class="fa-solid fa-plus"><%= link_to "Add", bookmarks_new_path, class: "ambl-button" %></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      <% end %>
      <i class="fa-solid fa-thumbs-up"><%= link_to "Done", root_path, class: "ambl-button" %></i>
    </div>
  </div>
</div>
