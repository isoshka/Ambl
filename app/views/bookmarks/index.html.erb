<div class="container">
  <div class="flex-parent jc-center mb-6">
    <div class="container">
      <div class="flex-parent jc-center mb-6">
        <h1><i class="fa-1x fa-solid fa-bookmark"></i> Your Interests</h1><h7> (Max of 3)</h7></div>
            <div>
              <%= "_" *35 %>
                <% @my_bookmarks.each_with_index do |bookmark, index| %>
                    <div class="bookmark-card-header">
                      <div class="bookmark-card-body"><strong>Interest <%=  index + 1 %>:</strong></div>
                        <h2 class="card-title"> <strong><%= bookmark.interest.name.capitalize %> </strong></h2>
                    <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
                      </div><br>
          <% end %>
          <br>
          <br>
          <%= link_to "Add", bookmarks_new_path, class: "ambl-button" %>
          <%= link_to "Done", root_path, class: "ambl-button" %>
      </div>
    </div>
  </div>
</div>
