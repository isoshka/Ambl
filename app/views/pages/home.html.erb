<% if current_user %>
  <div container>
    <div class="d-flex align-items-center justify-content-center">
      <%= render 'shared/avatar' %>
      <div class="d-flex align-items-center flex-column" style="height: 200px;">
        <div class="title p-2"><i class="fa-solid fa-compass-drafting"></i><em>mbl</em></div>
        <div class="subtitle">Find hidden gems, wherever you go!</div>
        <div class="subtitle mt-3">And we'll take care of the rest.</div>
      </div>
    </div>

  <div class="d-flex align-items-center justify-content-center mt-3">
    <%= link_to "① Set your preferences", settings_path, class: "btn btn-light btn-pill rounded-pill" %>
  </div>

  <div class="d-flex align-items-center justify-content-center mt-3">
    <%= link_to "② Choose your interests", bookmarks_path, class: "btn btn-light btn-pill rounded-pill" %>
  </div>
  <br>
  <p>③ Leave the app on, and start walking..<i class="fa-solid fa-person-walking"></i></p>
</div>

<% else  %>
  <div class="text-center">
    <div class="title"><em>Ambl</em></div>
    <div class="subtitle">Find hidden gems, wherever you go!</div>
    <%= link_to "Log In", new_user_session_path, class: "btn btn-secondary my-3" %>
  </div>
<% end %>
